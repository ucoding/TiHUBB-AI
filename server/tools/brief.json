{
  "id": "brief",
  "name": "多平台内容简报生成器",
  "description": "将问题或素材生成可直接发布的内容简报",
  "inputs": {
    "question": {
      "type": "string",
      "required": true
    },
    "platform": {
      "type": "enum",
      "values": ["zhihu", "x", "xhs", "linkedin"],
      "required": true
    },
    "file": {
      "type": "markdown",
      "required": false
    }
  },
  "defaultProvider": "gemini",
  "models": {
    "ollama": "gemma3:12b",
    "gemini": "gemini-3-flash-preview",
    "deepseek": "deepseek-chat"
  },
  "prompt": "brief/brief.{platform}.md",
  "outputType": "markdown",
  "temperature": 0.7
}
